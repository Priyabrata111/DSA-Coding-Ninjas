/*
Print the following pattern
Pattern for N = 4
    *
   *** 
  *****
 *******
 
The dots represent spaces.
*/
#include<iostream>
using namespace std;


int main(){

       /*  Read input as specified in the question.
	* Print output as specified in the question.
	*/
    int n;
    cin>>n;
    
    for(int i=1;i<=n;i++)
    {
        for(int j=n-i;j>=1;j--)
            cout<<" ";
        for(int k=1;k<=i;k++)
            cout<<"*";
        for(int l=1;l<i;l++)
            cout<<"*";
        
        cout<<endl;
    }
  
}

